<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_20"
                    android:background="@drawable/common_round_white"
                    android:padding="@dimen/dp_20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/common_top_round_white"
                        android:orientation="horizontal">
                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/dp_160"
                            android:ellipsize="end"
                            android:maxLines="1"
                            style="@style/font_half_bold_18_4A4C5C"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.baihe.lib_common.ui.widget.font.FontTextView
                                android:id="@+id/tv_phase"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="@dimen/dp_60"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingBottom="@dimen/dp_2"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12" />
                        </RelativeLayout>
                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            android:id="@+id/btn_sub_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_light_12_4A4C5C"
                            android:text="查看详情"
                            android:drawableRight="@mipmap/ic_arrow_right"
                            android:drawablePadding="@dimen/dp_8"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:background="@color/color_spline"
                        android:layout_marginTop="@dimen/dp_12"/>
                    <com.baihe.lib_common.ui.widget.keyvalue.KeyValueLayout
                        android:id="@+id/kvl_basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_sub_title_flag" />

                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            style="@style/font_half_bold_16_4A4C5C"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="预约信息" />
                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            android:id="@+id/btn_req_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_light_12_4A4C5C"
                            android:text="查看详情"
                            android:layout_marginRight="@dimen/dp_20"
                            android:drawableRight="@mipmap/ic_arrow_right"
                            android:drawablePadding="@dimen/dp_8"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/common_round_white">
                        <com.baihe.lib_common.ui.widget.keyvalue.KeyValueLayout
                            android:id="@+id/kvl_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_sub_title_flag" />

                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            style="@style/font_half_bold_16_4A4C5C"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="订单信息" />
                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_light_12_4A4C5C"
                            android:text="查看详情"
                            android:layout_marginRight="@dimen/dp_20"
                            android:drawableRight="@mipmap/ic_arrow_right"
                            android:drawablePadding="@dimen/dp_8"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/common_round_white">
                        <com.baihe.lib_common.ui.widget.keyvalue.KeyValueLayout
                            android:id="@+id/kvl_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_follow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_sub_title_flag" />

                        <com.baihe.lib_common.ui.widget.font.FontTextView
                            style="@style/font_half_bold_16_4A4C5C"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_weight="1"
                            android:text="跟进记录" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:padding="@dimen/dp_20"
                        android:background="@drawable/common_round_white">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_follow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@drawable/common_top_round_white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_more"/>
        <com.baihe.lib_common.ui.widget.font.FontTextView
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/common_button_round_blue_stroke"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="#FF6C8EFF"
            app:font_textStyle="HALF_BOLD"
            android:text="打电话"/>
        <com.baihe.lib_common.ui.widget.font.FontTextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/common_button_round_blue"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="#ffffff"
            app:font_textStyle="HALF_BOLD"
            android:text="创建新机会"/>

    </LinearLayout>


</LinearLayout>
