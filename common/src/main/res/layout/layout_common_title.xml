<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:navigationIcon="@drawable/navigation_icon">

        <com.baihe.common.view.FontTextView
            android:id="@+id/title_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:font_textStyle="HALF_BOLD"
            android:textColor="#4A4C5C"
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/commont_title_textSize" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/title_custom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
