<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatusLayout">
        <!-- 网络异常layout -->
        <attr name="netError_layout" format="reference" />
        <!-- 服务器异常layout -->
        <attr name="netFail_layout" format="reference" />
        <!-- 扩展layout -->
        <attr name="expand_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <!-- 字体样式, 默认细体-->
        <attr name="font_textStyle" format="enum">
            <enum name="LIGHT" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="HALF_BOLD" value="2" />
            <enum name="BOLD" value="3" />
        </attr>
    </declare-styleable>
</resources>
