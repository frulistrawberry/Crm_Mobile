<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/common_left_round_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_14"/>
        <com.baihe.lib_common.ui.widget.font.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            style="@style/font_half_bold_18_4A4C5C"
            android:text="销售机会筛选"
            android:layout_marginTop="@dimen/dp_40"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/color_spline"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.baihe.lib_common.ui.widget.keyvalue.KeyValueEditLayout
                android:id="@+id/kvl_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <com.baihe.lib_common.ui.widget.font.FontTextView
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#FF6C8EFF"
            android:textSize="14sp"
            android:background="@drawable/common_left_round_blue_stroke"
            app:font_textStyle="HALF_BOLD"
            android:gravity="center"
            android:text="重置"/>
        <com.baihe.lib_common.ui.widget.font.FontTextView
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_right_round_blue"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:font_textStyle="HALF_BOLD"
            android:gravity="center"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>