<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="font_textStyle" format="enum">
        <enum name="LIGHT" value="0" />
        <enum name="NORMAL" value="1" />
        <enum name="HALF_BOLD" value="2" />
        <enum name="BOLD" value="3" />
    </attr>

    <declare-styleable name="FontTextView">
        <!-- 字体样式, 默认细体-->
        <attr name="font_textStyle" />
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <!-- 字体样式, 默认细体-->
        <attr name="font_textStyle"/>
    </declare-styleable>


    <declare-styleable name="KeyValueLayout">
        <!-- key-value横向间距, 默认4dp-->
        <attr name="kv_kv_space" format="dimension" />
        <!-- key是否等宽,等宽将取key里最大宽作为所有key的宽度,默认false-->
        <attr name="kv_key_equal_width" format="boolean" />
        <!-- 每行的纵向间距, 默认12dp-->
        <attr name="kv_item_space" format="dimension" />
        <!-- key是否有冒号, 默认true-->
        <attr name="kv_key_colon" format="boolean" />
        <!-- key文字大小，默认14sp-->
        <attr name="kv_key_textSize" format="dimension" />
        <!-- key文字颜色，默认#4A4C5C-->
        <attr name="kv_key_textColor" format="color" />
        <!-- value文字大小，默认14sp-->
        <attr name="kv_value_textSize" format="dimension" />
        <!-- value文字颜色，默认#4A4C5C-->
        <attr name="kv_value_textColor" format="color" />
        <!-- value最大行数-->
        <attr name="kv_value_maxLine" format="integer" />
        <!-- key文字字体, 默认细体-->
        <attr name="kv_key_textStyle" format="enum">
            <enum name="LIGHT" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="HALF_BOLD" value="2" />
            <enum name="BOLD" value="3" />
        </attr>
        <!-- value文字字体, 默认细体-->
        <attr name="kv_value_textStyle" format="enum">
            <enum name="LIGHT" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="HALF_BOLD" value="2" />
            <enum name="BOLD" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <!-- label背景图 -->
        <attr name="label_background" format="reference" />
        <!-- label文字颜色-->
        <attr name="label_textColor" format="color" />
        <!-- label文字选中颜色-->
        <attr name="label_select_textColor" format="color" />
        <!-- label文字大小 -->
        <attr name="label_textSize" format="dimension" />
        <!-- label横向间距 -->
        <attr name="label_horizontal_space" format="dimension" />
        <!-- label纵向间距 -->
        <attr name="label_vertical_space" format="dimension" />
        <!-- label是否只显示单行 -->
        <attr name="singleLine" format="boolean" />
        <!-- label是否单行延伸（需要singleLine为true） -->
        <attr name="singleLineExtend" format="boolean" />
        <!-- label选中背景图 -->
        <attr name="label_select_background" format="reference" />
        <!-- label选中是否多选 -->
        <attr name="label_multiSelect" format="boolean" />
        <!-- label选中多选最大选择的个数 -->
        <attr name="label_multiSelect_maxNum" format="integer" />
        <!-- label选中多选最小选择的个数 -->
        <attr name="label_multiSelect_minNum" format="integer" />
        <!--label文字内部左边距-->
        <attr name="label_text_maginLeft" format="dimension" />
        <!--label文字内部上边距-->
        <attr name="label_text_maginTop" format="dimension" />
        <!--label文字内部右边距-->
        <attr name="label_text_maginRight" format="dimension" />
        <!--label文字内部下边距-->
        <attr name="label_text_maginBottom" format="dimension" />
        <!-- label单选模式，选中是否可取消，默认false不取消 -->
        <attr name="label_select_cancel" format="boolean" />
    </declare-styleable>

    <declare-styleable name="labels_view">
        <attr name="selectType" format="enum">
            <enum name="NONE" value="1" />
            <enum name="SINGLE" value="2" />
            <enum name="SINGLE_IRREVOCABLY" value="3" />
            <enum name="MULTI" value="4" />
        </attr>
        <attr name="maxSelect" format="integer" />
        <attr name="maxLines" format="integer" />
        <attr name="labelTextColor" format="reference|color" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelTextPaddingLeft" format="dimension" />
        <attr name="labelTextPaddingTop" format="dimension" />
        <attr name="labelTextPaddingRight" format="dimension" />
        <attr name="labelTextPaddingBottom" format="dimension" />
        <attr name="lineMargin" format="dimension" />
        <attr name="wordMargin" format="dimension" />
        <attr name="labelBackground" format="reference|color" />
    </declare-styleable>
</resources>
