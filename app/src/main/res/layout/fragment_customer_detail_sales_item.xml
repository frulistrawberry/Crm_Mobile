<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_card_middle_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/customer_sales_item_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/time_point" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_sales_item_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:text="02-12  12:05"
            android:textColor="#8B8B99"
            android:textSize="12sp"
            app:font_textStyle="LIGHT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_sales_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀约跟进记录"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="HALF_BOLD" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <com.baihe.lihepro.view.FlowLayout
                android:id="@+id/customer_sales_item_label_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label_horizontal_space="4dp"
                app:label_textColor="#00B6EB"
                app:label_textSize="10sp"
                app:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/customer_sales_item_go_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <com.baihe.lihepro.view.KeyValueLayout
        android:id="@+id/customer_sales_item_data_kvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        app:kv_key_equal_width="true"
        app:kv_key_textColor="#4A4C5C"
        app:kv_key_textSize="14sp"
        app:kv_kv_space="5dp"
        app:kv_value_maxLine="1"
        app:kv_value_textColor="#4A4C5C"
        app:kv_value_textSize="14sp" />

</LinearLayout>
