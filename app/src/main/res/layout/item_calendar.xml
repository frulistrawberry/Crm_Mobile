<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/calendar_round_blue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:text="20"/>

        <TextView
            android:id="@+id/tv_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="初一"
            android:textSize="10sp" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_level"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignRight="@id/ll_item"
        android:layout_alignTop="@id/ll_item"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-3dp"
        android:visibility="visible"
        >
        <com.baihe.lihepro.view.calendar.CirCleView
            android:id="@+id/v_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/v_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="A"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" />
    </RelativeLayout>
    <View
        android:id="@+id/v_point"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:visibility="visible"
        android:background="@drawable/calendar_point"
        android:layout_alignBottom="@id/ll_item"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"/>


</RelativeLayout>