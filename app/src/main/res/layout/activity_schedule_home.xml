<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_week_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="4dp"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="日"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="一"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="二"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="三"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="四"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="五"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8E8E8E"
            android:gravity="center"
            android:text="六"/>


    </LinearLayout>
    <com.necer.calendar.Miui10Calendar
        android:id="@+id/calendar"
        app:lastNextMonthClickEnable="false"
        app:allMonthSixLine="false"
        app:calendarHeight="333dp"
        app:defaultCalendar="month"
        app:stretchCalendarEnable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F6F6F8">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_round_white_bg">

                <View
                    android:id="@+id/v_flag"
                    android:layout_width="35dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_calendar_icon" />
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/ll_available_halls"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="vertical">
                                <com.baihe.common.view.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:font_textStyle="BOLD"
                                    android:textSize="20sp"
                                    android:textColor="#4A4C5C"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="可预订的宴会厅"/>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_available_halls"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="16dp"
                                    android:background="@drawable/item_card_white_bg"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_unavailable_halls"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="vertical">
                                <com.baihe.common.view.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:font_textStyle="BOLD"
                                    android:textSize="20sp"
                                    android:textColor="#4A4C5C"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="不可预订的宴会厅"/>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_unavailable_halls"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="19dp"
                                    android:background="@drawable/item_card_white_bg"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_empty_halls"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="80dp"
                                android:src="@drawable/schedule_empty_halls"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#4A4C5C"
                                android:textSize="14sp"
                                android:text="这一天没有档期，快去看看别的吧"/>

                        </LinearLayout>
                    </FrameLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



    </com.necer.calendar.Miui10Calendar>

</LinearLayout>