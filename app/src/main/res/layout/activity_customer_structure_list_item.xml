<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/customer_structure_list_item_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_checkbox_select" />

    <LinearLayout
        android:id="@+id/customer_structure_list_item_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-10dp"
        android:background="@drawable/item_card_white_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_structure_list_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="王岗子"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="HALF_BOLD" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_structure_list_item_select_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="已选择10项"
            android:textColor="#8B8B99"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/customer_structure_list_item_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
</LinearLayout>