<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_round_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/contract_list_title_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            app:navigationIcon="@drawable/navigation_icon">

            <com.baihe.common.view.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="合同列表"
                android:textColor="#4A4C5C"
                android:textSize="@dimen/commont_title_textSize"
                app:font_textStyle="HALF_BOLD" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contract_list_title_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_search" />

            <ImageView
                android:id="@+id/contract_list_title_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/title_add" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:id="@+id/contract_list_title_hs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.baihe.lihepro.view.TextTransitionRadioGroup
                    android:id="@+id/contract_list_title_ttrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:slider_color="#00B6EB"
                    app:slider_height="2.5dp"
                    app:slider_refer_spacing="8dp"
                    app:slider_round="1.25dp"
                    app:slider_width_weight="0.5">

                    <com.baihe.lihepro.view.TextTransitionRadioButton
                        android:id="@+id/contract_list_title_my_ttrb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:checked="true"
                        android:text="我的合同"
                        app:isTransition="true"
                        app:selected_textBold="true"
                        app:selected_textColor="#4A4C5C"
                        app:selected_textSize="16sp"
                        app:text_gravity="center"
                        app:unselected_textBold="false"
                        app:unselected_textColor="#4A4C5C"
                        app:unselected_textSize="14sp" />

                    <com.baihe.lihepro.view.TextTransitionRadioButton
                        android:id="@+id/customer_detail_title_coord_ttrb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:background="@null"
                        android:text="协作合同"
                        app:isTransition="true"
                        app:selected_textBold="true"
                        app:selected_textColor="#4A4C5C"
                        app:selected_textSize="16sp"
                        app:text_gravity="center"
                        app:unselected_textBold="false"
                        app:unselected_textColor="#4A4C5C"
                        app:unselected_textSize="14sp" />
                </com.baihe.lihepro.view.TextTransitionRadioGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/contract_list_title_filter_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_filter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:text="筛选"
                android:textColor="#4A4C5C"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>