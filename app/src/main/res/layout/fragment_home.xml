<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top_bg"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.baihe.common.view.FontTextView
                        android:id="@+id/home_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Hi，Nico"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp"
                        app:font_textStyle="HALF_BOLD" />

                    <LinearLayout
                        android:id="@+id/msg_ll"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_msg" />

                    </LinearLayout>



<!--                    <TextView-->
<!--                        android:id="@+id/tv_badge"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignTop="@id/btn_msg"-->
<!--                        android:layout_alignRight="@id/btn_msg"-->
<!--                        android:textColor="@color/N_white"-->
<!--                        android:paddingTop="1dp"-->
<!--                        android:paddingLeft="2dp"-->
<!--                        android:paddingRight="2dp"-->
<!--                        android:paddingBottom="1dp"-->
<!--                        android:textSize="10sp"-->
<!--                        android:layout_marginEnd="-5dp"-->
<!--                        android:layout_marginTop="-5dp"-->
<!--                        android:background="@drawable/circle_red_solid_msg"-->
<!--                        android:text="99+" />-->


                </RelativeLayout>


                <com.baihe.common.view.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="每天都有好心情，今天也要加油哦！"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    app:font_textStyle="LIGHT" />
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

    <com.baihe.common.view.StatusLayout
        android:id="@+id/home_content_sl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/home_content_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="false">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.baihe.common.view.FontTextView
                        android:id="@+id/home_apps_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="20dp"
                        android:text="常用应用"
                        android:textColor="#4A4C5C"
                        android:textSize="20dp"
                        app:font_textStyle="HALF_BOLD" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_apps_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="20dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <LinearLayout
                        android:id="@+id/home_approve_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.baihe.common.view.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="待审批"
                            android:textColor="#4A4C5C"
                            android:textSize="20sp"
                            app:font_textStyle="HALF_BOLD" />

                        <com.baihe.common.view.FontTextView
                            android:id="@+id/home_approve_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部"
                            android:textColor="#4A4C5C"
                            android:textSize="12sp"
                            app:font_textStyle="LIGHT" />
                    </LinearLayout>

                    <com.baihe.lihepro.view.AdaptiveRecyclerView
                        android:id="@+id/home_approve_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </com.baihe.common.view.StatusLayout>

</LinearLayout>