<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_bg"
    android:orientation="vertical">

    <com.baihe.common.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="审批单"
        android:textColor="#4A4C5C"
        android:textSize="20sp"
        app:font_textStyle="HALF_BOLD" />

    <com.baihe.common.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:text="优惠金额"
        android:textColor="#4A4C5C"
        android:textSize="16sp"
        app:font_textStyle="HALF_BOLD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/approve_price_input_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="176.0"
            android:background="@drawable/arrival_time_round_drawable"
            android:hint="请填写金额（非必填）"
            android:includeFontPadding="false"
            android:inputType="numberDecimal"
            android:paddingLeft="18dp"
            android:paddingTop="15dp"
            android:paddingRight="18dp"
            android:paddingBottom="15dp"
            android:singleLine="true"
            android:textColor="#4A4C5C"
            android:textColorHint="#C5C5CE"
            android:textSize="14sp" />

        <com.baihe.common.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="元"
            android:textColor="#4A4C5C"
            android:textSize="15sp"
            app:font_textStyle="LIGHT" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="85" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/approve_price_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.baihe.common.view.FontTextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="优惠后售价："
            android:textColor="#FF1E5A"
            android:textSize="14sp"
            app:font_textStyle="LIGHT" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/approve_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="11111元"
            android:textColor="#FF1E5A"
            android:textSize="14sp"
            app:font_textStyle="LIGHT" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/approve_sale_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.baihe.common.view.FontTextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="产品折扣："
            android:textColor="#FF1E5A"
            android:textSize="14sp"
            app:font_textStyle="LIGHT" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/approve_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="95折"
            android:textColor="#FF1E5A"
            android:textSize="14sp"
            app:font_textStyle="LIGHT" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="#EFEFEF" />

    <com.baihe.common.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="同意理由"
        android:textColor="#4A4C5C"
        android:textSize="16sp"
        app:font_textStyle="HALF_BOLD" />

    <EditText
        android:id="@+id/approve_ok_input_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/arrival_time_round_drawable"
        android:hint="非必填"
        android:includeFontPadding="false"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:paddingRight="16dp"
        android:gravity="left|top"
        android:paddingBottom="15dp"
        android:textColor="#4A4C5C"
        android:textColorHint="#C5C5CE"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/approve_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/button_round_white"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="取消"
            android:textColor="#2DB4E6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/approve_ok_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_round_blue2"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>