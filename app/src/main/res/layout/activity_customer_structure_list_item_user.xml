<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/customer_structure_list_item_user_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/unchecked_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-10dp"
        android:background="@drawable/item_card_white_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_structure_list_item_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="20dp"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="NORMAL" />

        <com.baihe.lihepro.view.KeyValueLayout
            android:id="@+id/customer_structure_list_item_user_data_kvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:kv_key_colon="false"
            app:kv_key_equal_width="true"
            app:kv_key_textColor="#8B8B99"
            app:kv_key_textSize="14sp"
            app:kv_kv_space="2dp"
            app:kv_value_textColor="#8B8B99"
            app:kv_value_textSize="14sp" />
    </LinearLayout>
</LinearLayout>