<?xml version="1.0" encoding="utf-8"?>
<com.baihe.lihepro.view.KeyValueItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/kv_edit_key_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <com.baihe.common.view.FontTextView
            android:id="@+id/kv_edit_key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="LIGHT" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/kv_edit_key_required_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="*"
            android:textColor="#FF1E5A"
            android:textSize="12sp"
            app:font_textStyle="HALF_BOLD" />

    </LinearLayout>

    <EditText
        android:id="@+id/kv_edit_value_price_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@null"
        android:paddingTop="15dp"
        android:includeFontPadding="false"
        android:paddingBottom="15dp"
        android:gravity="left|center_vertical"
        android:inputType="numberDecimal"
        android:layout_marginLeft="11dp"
        android:textSize="16sp" />

    <com.baihe.common.view.FontTextView
        android:id="@+id/kv_edit_value_price_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textColor="#4A4C5C"
        android:textSize="16sp"
        app:font_textStyle="LIGHT"
        />

</com.baihe.lihepro.view.KeyValueItemLayout>