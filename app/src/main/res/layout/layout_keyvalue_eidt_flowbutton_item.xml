<?xml version="1.0" encoding="utf-8"?>
<com.baihe.lihepro.view.KeyValueItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/kv_edit_key_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <com.baihe.common.view.FontTextView
            android:id="@+id/kv_edit_key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="LIGHT" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/kv_edit_key_required_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="*"
            android:textColor="#FF1E5A"
            android:textSize="12sp"
            app:font_textStyle="HALF_BOLD" />

    </LinearLayout>

    <com.baihe.lihepro.view.FlowLayout
        android:id="@+id/kv_edit_key_buttons_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:label_background="@drawable/button_round_gray2"
        app:label_horizontal_space="5dp"
        app:label_select_background="@drawable/button_round_blue2"
        app:label_select_textColor="#FFFFFF"
        app:label_textColor="#4A4C5C"
        app:label_textSize="14sp"
        app:label_text_maginBottom="7dp"
        app:label_text_maginLeft="20dp"
        app:label_text_maginRight="20dp"
        app:label_text_maginTop="9dp"
        app:label_vertical_space="10dp"
        app:label_select_cancel="true"/>

</com.baihe.lihepro.view.KeyValueItemLayout>