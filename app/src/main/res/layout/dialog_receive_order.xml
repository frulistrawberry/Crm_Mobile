<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_round_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/receive_order_data_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:padding="10dp"
        android:src="@drawable/dialog_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.baihe.common.view.FontTextView
            android:id="@+id/receive_order_data_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="确认领取订单"
            android:textColor="#4A4C5C"
            android:textSize="20sp"
            app:font_textStyle="HALF_BOLD" />

        <com.baihe.lihepro.view.KeyValueLayout
            android:id="@+id/receive_order_data_kvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            app:kv_key_equal_width="true"
            app:kv_key_textColor="#4A4C5C"
            app:kv_key_textSize="14sp"
            app:kv_key_textStyle="LIGHT"
            app:kv_value_textColor="#4A4C5C"
            app:kv_value_textSize="14sp"
            app:kv_value_textStyle="LIGHT" />
        <LinearLayout
            android:id="@+id/ll_contract_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" >
            <com.baihe.common.view.FontTextView
                android:id="@+id/tv_contract_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="合同类型"/>
            <com.baihe.common.view.FontTextView
                android:id="@+id/kv_edit_key_required_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="*"
                android:textColor="#FF1E5A"
                android:textSize="12sp"
                app:font_textStyle="HALF_BOLD" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receive_order_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/button_round_white"
                android:gravity="center"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:text="重新选择"
                android:textColor="#2DB4E6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/receive_order_receive_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1.0"
                android:background="@drawable/button_round_blue2"
                android:gravity="center"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:text="确定领取"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>