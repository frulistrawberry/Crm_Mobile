<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_bottom_dialog_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/dialog_close" />
        <com.baihe.common.view.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4C5C"
            android:textSize="20sp"
            app:font_textStyle="HALF_BOLD"
            android:text="审批流程"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/ll_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/iv_tag"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/circle_blue_bg"
                android:gravity="center"
                android:text="现"
                android:textColor="#2DB4E6"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <com.baihe.common.view.FontTextView
                    android:id="@+id/tv_hall_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#4A4C5C"
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:font_textStyle="LIGHT" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:background="#D8D8D8"/>

                <com.baihe.common.view.FontTextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#4A4C5C"
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:font_textStyle="LIGHT" />
                <View
                    android:id="@id/v_divider"
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:background="#D8D8D8"/>

                <com.baihe.common.view.FontTextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#4A4C5C"
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:font_textStyle="LIGHT" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECF0"
            android:layout_marginTop="17dp"
            android:layout_below="@id/ll_schedule"/>

        <com.baihe.lihepro.view.MaxRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_divider" />

    </RelativeLayout>

</LinearLayout>