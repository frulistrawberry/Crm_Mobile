<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/item_card_white_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_edit_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:background="@drawable/input_round_drawable"
            android:gravity="top|left"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:paddingTop="16dp"
            android:paddingRight="15dp"
            android:paddingBottom="16dp"
            android:textColor="#4A4C5C"
            android:textColorHint="#C5C5CE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/input_edit_confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/common_button_round_blue"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>