<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="13dp"
    android:layout_height="48dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <View
            android:id="@+id/v_divider1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D8D8D8"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/v_divider3"
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:background="#D8D8D8"/>
            <View
                android:id="@+id/v_divider4"
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:layout_below="@id/v_divider3"
                android:layout_centerHorizontal="true"
                android:background="#D8D8D8"/>
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_blue_bg"
                />
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_blue_solid"
                android:id="@+id/iv_point"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_divider2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D8D8D8"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <com.baihe.common.view.FontTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4A4C5C"
            app:font_textStyle="NORMAL"/>

        <com.baihe.common.view.FontTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4A4C5C"
            app:font_textStyle="NORMAL"/>
    </LinearLayout>

</LinearLayout>