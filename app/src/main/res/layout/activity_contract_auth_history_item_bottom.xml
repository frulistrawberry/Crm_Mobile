<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_card_bottom_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contract_auth_history_item_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contract_auth_history_item_icon_iv"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/time_point" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/contract_auth_history_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:text="喜铺张鑫宇-11111"
            android:textColor="#4A4C5C"
            android:textSize="14sp"
            app:font_textStyle="LIGHT" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/contract_auth_history_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2011-11-21"
            android:textColor="#C5C5CE"
            android:textSize="12sp"
            app:font_textStyle="LIGHT" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contract_auth_history_item_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.baihe.common.view.FontTextView
            android:id="@+id/contract_auth_history_item_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="邀约跟进记录"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="HALF_BOLD" />

        <LinearLayout
            android:id="@+id/contract_auth_history_item_see_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.baihe.common.view.FontTextView
                android:id="@+id/contract_auth_history_item_see_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看驳回原因"
                android:textColor="#2DB4E6"
                android:textSize="12sp"
                app:font_textStyle="NORMAL" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
