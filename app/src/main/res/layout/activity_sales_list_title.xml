<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_round_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sales_list_title_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            app:navigationIcon="@drawable/navigation_icon">


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <com.baihe.common.view.FontTextView
                    android:id="@+id/tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#4A4C5C"
                    app:font_textStyle="HALF_BOLD"
                    android:text="我的销售"/>
                <View
                    android:id="@+id/line1"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/common_button_round_blue"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">
                <com.baihe.common.view.FontTextView
                    android:id="@+id/tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#4A4C5C"
                    app:font_textStyle="NORMAL"
                    android:text="我的协作"/>
                <View
                    android:id="@+id/line2"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/common_button_round_blue"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sales_list_title_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_search" />

            <ImageView
                android:id="@+id/sales_list_title_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/title_order_add" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.baihe.lihepro.view.SliderRadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            app:slider_color="#00B6EB"
            app:slider_height="2.5dp"
            app:slider_refer_spacing="8dp"
            app:slider_round="1.25dp"
            app:slider_width_weight="0.5">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@null"
                android:gravity="center"
                android:text="入库时间"
                android:textColor="#4A4C5C"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.baihe.lihepro.view.SliderRadioGroup>

        <LinearLayout
            android:id="@+id/sales_list_title_filter_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:layout_marginRight="19dp"
                android:background="#C5C5CE" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_filter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:text="筛选"
                android:textColor="#4A4C5C"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>