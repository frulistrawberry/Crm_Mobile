<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_card_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <com.baihe.common.view.FontTextView
            android:id="@+id/customer_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李玉刚"
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            app:font_textStyle="HALF_BOLD" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <com.baihe.lihepro.view.FlowLayout
                android:id="@+id/customer_item_label_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:label_horizontal_space="4dp"
                app:label_textColor="#FFFFFF"
                app:label_textSize="10sp"
                app:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/customer_item_call_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/action_call" />
    </LinearLayout>

    <com.baihe.lihepro.view.KeyValueLayout
        android:id="@+id/customer_item_data_kvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:kv_key_equal_width="true"
        app:kv_key_textColor="#8B8B99"
        app:kv_kv_space="5dp"
        app:kv_value_textColor="#8B8B99" />

</LinearLayout>