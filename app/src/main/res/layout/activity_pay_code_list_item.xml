<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_card_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/pay_code_list_item_head_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/user_head_default" />

        <com.baihe.common.view.FontTextView
            android:id="@+id/pay_code_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/pay_code_list_item_head_iv"
            android:text=""
            android:textColor="#4A4C5C"
            android:textSize="16sp"
            android:textStyle="bold"
            app:font_textStyle="HALF_BOLD" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="38dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/pay_code_list_item_name_tv"
            android:layout_centerVertical="true"
            android:textSize="10sp"/>


        <ImageView
            android:id="@+id/pay_code_list_item_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/detail_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#2DB4E6"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pay_code_list_item_arrow_iv"
            android:layout_marginRight="4dp"
            android:text="查看付款码"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ECECF0"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <com.baihe.lihepro.view.KeyValueLayout
        android:id="@+id/pay_code_list_item_data_kvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:kv_key_textStyle="LIGHT"
        app:kv_value_textStyle="NORMAL" />

</LinearLayout>
