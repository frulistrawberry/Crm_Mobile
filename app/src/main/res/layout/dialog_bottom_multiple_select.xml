<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_bottom_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/bottom_select_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="取消"
                android:textColor="#FFC5C5CE"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bottom_select_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="标题"
                android:textColor="#4A4C5C"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.baihe.lihepro.view.FlowFixedLayout
            android:id="@+id/bottom_select_ffl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:ffl_label_fill_mode="true"
            app:ffl_label_horizontal_space="16dp"
            app:ffl_label_rows="3"
            app:ffl_label_multiSelect="true"
            app:ffl_label_select_background="@drawable/light_blue_round_drawable"
            app:ffl_label_select_textColor="@color/colorWhite"
            app:ffl_label_textColor="#4A4C5C"
            app:ffl_label_textSize="14sp"
            app:ffl_label_text_maginTop="8dp"
            app:ffl_label_vertical_space="16dp" />


        <TextView
            android:id="@+id/bottom_select_confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/common_button_round_blue"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>