<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalendarView">
        <attr name="calendar_card_view" format="color" /> <!--热插拔自定义类路径-->
        <attr name="week_background" format="color" /> <!--星期栏的背景-->
        <attr name="week_text_color" format="color" /> <!--星期栏文本颜色-->
        <attr name="current_day_text_color" format="color" /> <!--今天的文本颜色-->
        <attr name="day_text_size" format="string" /> <!--天数文本大小-->
        <attr name="lunar_text_size" format="string" /> <!--农历文本大小-->
        <attr name="scheme_text" format="string" /> <!--标记文本-->
        <attr name="scheme_text_color" format="color" /> <!--标记文本颜色-->
        <attr name="scheme_month_text_color" format="color" /> <!--标记天数文本颜色-->
        <attr name="scheme_lunar_text_color" format="color" /> <!--标记农历文本颜色-->
        <attr name="scheme_theme_color" format="color" /> <!--标记的颜色-->
        <attr name="selected_theme_color" format="color" /> <!--选中颜色-->
        <attr name="selected_text_color" format="color" /> <!--选中文本颜色-->
        <attr name="selected_lunar_text_color" format="color" /> <!--选中农历文本颜色-->
        <attr name="current_month_text_color" format="color" /> <!--当前月份的字体颜色-->
        <attr name="other_month_text_color" format="color" /> <!--其它月份的字体颜色-->
        <attr name="current_month_lunar_text_color" format="color" /> <!--当前月份农历节假日颜色-->
        <attr name="other_month_lunar_text_color" format="color" /> <!--其它月份农历节假日颜色-->
        <attr name="min_year" format="integer" />  <!--最小年份1900-->
        <attr name="max_year" format="integer" /> <!--最大年份2099-->
    </declare-styleable>

    <declare-styleable name="SliderRadioGroup">
        <!-- 滑块圆角 -->
        <attr name="slider_round" format="dimension" />
        <!-- 滑块高度 -->
        <attr name="slider_height" format="dimension" />
        <!-- 滑块颜色 -->
        <attr name="slider_color" format="color" />
        <!-- 滑块宽度占比 -->
        <attr name="slider_width_weight" format="float" />
        <!-- 滑块策略间隙，当RadioGroup不是固定高时，为容下滑块而自动调整高度，该值为滑块和文字之间的间隙值，根据滑块位置策略（SliderGravity）自动分配高度 -->
        <attr name="slider_refer_spacing" format="dimension" />
        <!-- 底部线高 -->
        <attr name="bottom_line_height" format="dimension" />
        <!-- 底部线颜色 -->
        <attr name="bottom_line_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AlertRadioButton">
        <!-- 提示区域的位置x轴偏移量 -->
        <attr name="alert_offsetX" format="dimension" />
        <!-- 提示区域的位置y轴偏移量 -->
        <attr name="alert_offsetY" format="dimension" />
        <!-- 提示区域的文字大小 -->
        <attr name="alert_textSize" format="dimension" />
        <!-- 提示区域的文字颜色 -->
        <attr name="alert_textColor" format="color" />
        <!-- 提示区域的背景颜色 -->
        <attr name="alert_backgroundColor" format="color" />
        <!-- 提示区域的位置, 0是左上,1是右上, 2是左下, 3是右下. 默认是右上 -->
        <attr name="alert_gravity" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomLeft" value="2" />
            <enum name="bottomRight" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextTransitionRadioButton">
        <!--选中文字是否粗体-->
        <attr name="selected_textBold" format="boolean" />
        <!--未选中文字是否粗体-->
        <attr name="unselected_textBold" format="boolean" />
        <!--选中文字大小-->
        <attr name="selected_textSize" format="dimension" />
        <!--未选中文字大小-->
        <attr name="unselected_textSize" format="dimension" />
        <!--选中文字颜色-->
        <attr name="selected_textColor" format="color" />
        <!--未选中文字颜色-->
        <attr name="unselected_textColor" format="color" />
        <!--是否有过渡效果-->
        <attr name="isTransition" format="boolean" />
        <!--文字位置-->
        <attr name="text_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <!-- label背景图 -->
        <attr name="label_background" format="reference" />
        <!-- label文字颜色-->
        <attr name="label_textColor" format="color" />
        <!-- label文字选中颜色-->
        <attr name="label_select_textColor" format="color" />
        <!-- label文字大小 -->
        <attr name="label_textSize" format="dimension" />
        <!-- label横向间距 -->
        <attr name="label_horizontal_space" format="dimension" />
        <!-- label纵向间距 -->
        <attr name="label_vertical_space" format="dimension" />
        <!-- label是否只显示单行 -->
        <attr name="singleLine" format="boolean" />
        <!-- label是否单行延伸（需要singleLine为true） -->
        <attr name="singleLineExtend" format="boolean" />
        <!-- label选中背景图 -->
        <attr name="label_select_background" format="reference" />
        <!-- label选中是否多选 -->
        <attr name="label_multiSelect" format="boolean" />
        <!-- label选中多选最大选择的个数 -->
        <attr name="label_multiSelect_maxNum" format="integer" />
        <!-- label选中多选最小选择的个数 -->
        <attr name="label_multiSelect_minNum" format="integer" />
        <!--label文字内部左边距-->
        <attr name="label_text_maginLeft" format="dimension" />
        <!--label文字内部上边距-->
        <attr name="label_text_maginTop" format="dimension" />
        <!--label文字内部右边距-->
        <attr name="label_text_maginRight" format="dimension" />
        <!--label文字内部下边距-->
        <attr name="label_text_maginBottom" format="dimension" />
        <!-- label单选模式，选中是否可取消，默认false不取消 -->
        <attr name="label_select_cancel" format="boolean" />
    </declare-styleable>

    <declare-styleable name="KeyValueLayout">
        <!-- key-value横向间距, 默认4dp-->
        <attr name="kv_kv_space" format="dimension" />
        <!-- key-value最大折叠行数, 默认为0，0不会折叠-->
        <attr name="kv_kv_flod_lineNum" format="integer" />
        <!-- key是否有冒号, 默认true-->
        <attr name="kv_key_colon" format="boolean" />
        <!-- key是否等宽,等宽将取key里最大宽作为所有key的宽度,默认false-->
        <attr name="kv_key_equal_width" format="boolean" />
        <!-- 每行的纵向间距, 默认12dp-->
        <attr name="kv_item_space" format="dimension" />
        <!-- key文字大小，默认14sp-->
        <attr name="kv_key_textSize" format="dimension" />
        <!-- key文字颜色，默认#4A4C5C-->
        <attr name="kv_key_textColor" format="color" />
        <!-- value文字大小，默认14sp-->
        <attr name="kv_value_textSize" format="dimension" />
        <!-- value文字颜色，默认#4A4C5C-->
        <attr name="kv_value_textColor" format="color" />
        <!-- value最大行数-->
        <attr name="kv_value_maxLine" format="integer" />
        <!-- key文字字体, 默认细体-->
        <attr name="kv_key_textStyle" format="enum">
            <enum name="LIGHT" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="HALF_BOLD" value="2" />
            <enum name="BOLD" value="3" />
        </attr>
        <!-- value文字字体, 默认细体-->
        <attr name="kv_value_textStyle" format="enum">
            <enum name="LIGHT" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="HALF_BOLD" value="2" />
            <enum name="BOLD" value="3" />
        </attr>
    </declare-styleable>

</resources>