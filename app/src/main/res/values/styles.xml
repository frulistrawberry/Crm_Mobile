<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- 标题颜色 -->
        <item name="android:windowBackground">@android:color/white</item> <!-- 窗口背景色 -->
        <item name="colorAccent">@android:color/darker_gray</item>  <!-- 控件激活状态、光标的颜色 -->
    </style>
    <!-- 底部菜单弹窗 BottomSheet的选项样式 -->
    <style name="bottom_sheet_item_style_yes_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_option_item_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActivityTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
    </style>

    <style name="NoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation" tools:ignore="ResourceName">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="DialogSearchAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_search_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_search_exit</item>
    </style>

    <style name="DialogSortAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_sort_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_sort_exit</item>
    </style>

    <style name="SearchTypeDialog" parent="CommonDialog">
        <item name="android:backgroundDimAmount">0.2</item>
    </style>
</resources>